<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/navbar.css">
    <title>Question Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 2rem;
            max-width: 600px;
            margin: auto;
        }

        h1 {
            color: #333;
        }

        img {
            width: 100%;
            max-width: 500px;
            height: auto;
            margin: 1rem 0;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        p {
            font-size: 1.1rem;
            line-height: 1.6;
        }
    </style>
</head>

<body>
    <!-- Importing navbar here -->
    <%- include("../components/navbar.ejs") %>
        <div class="card">
            <h1 id="title"><%-data[0].quesTitle%></h1>
            <p>Author : <u><%-data[0].user.userName%></u></p>
            <p><%-data[0].quesDescription%></p>
            <img src="http://localhost:3000/<%-data[0].quesImage%>" alt="question image" height="50px" width="50px">
            <br>
            <i>Asked on: <%= new Date(data[0].createdAt).toLocaleDateString() %></i>
        </div>

        <div class="answers">
            <h1>Answers here: </h1>
            <% answers.forEach((answer)=>{%>
                <div class="card" style="border: 1px solid red; margin: 4px; border-radius: 5px;">
                    <p><%-answer.ansText%></p>
                    <p>Author : <u><%-answer.user.userName%></u></p>
                    <i>Answered on: <%= new Date(answer.createdAt).toLocaleDateString() %></i>
                </div>
                <% }) %>
        </div>

        <div class="answersecton">
            <form action="/question/<%-data[0].id%>" method="post">
                <textarea name="answer" id="" rows="20" cols="80"></textarea>
                <button>Submit</button>
            </form>
        </div>

</body>

</html>